<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"

            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <fragment
                    android:id="@+id/mapFragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="407dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="70dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="20dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_first"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/myTextView"
                                android:layout_width="203dp"
                                android:layout_height="110dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:fontFamily="@font/sans"

                                android:text="Points marked:"
                                android:textAlignment="center"
                                android:textSize="35sp"
                                android:textStyle="bold|normal"

                                />

                            <TextView
                                android:id="@+id/numberOfPoints"

                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:autofillHints=""
                                android:padding="5dp"
                                android:text=" "
                                android:textAlignment="center"
                                android:textSize="90dp"
                                android:textStyle="bold|normal" />

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/hr"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/myTextView2"
                                android:layout_width="203dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:fontFamily="@font/sans"
                                android:text="Next Point is in:(meters):"
                                android:textAlignment="center"
                                android:textSize="25sp"
                                android:textStyle="bold|normal"

                                />

                            <TextView
                                android:id="@+id/distance"
                                android:layout_width="125dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:autofillHints=""
                                android:padding="5dp"
                                android:text="15.89766"
                                android:textAlignment="center"
                                android:textSize="30sp"
                                android:fontFamily="@font/sans"
                                android:textStyle="bold|normal" />

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/hr"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/linesMarked"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:fontFamily="@font/sans"
                                android:text = "Lines Marked:"
                                android:textAlignment="center"
                                android:textStyle="bold|normal"

                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/linesMarkedValue"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:textAlignment="center"
                                android:text = ""
                               android:textSize="30sp" />


                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/hr"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/pace"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:fontFamily="@font/sans"
                                android:text = "Pace:"
                                android:textAlignment="center"
                                android:textStyle="bold|normal"

                                android:textSize="25sp"/>

                            <TextView
                                android:id="@+id/paceValue"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:textAlignment="center"
                                android:text = ""
                                android:textSize="20sp" />


                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/hr"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/average"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:fontFamily="@font/sans"
                                android:text = "Average points \n per line:"
                                android:textAlignment="center"
                                android:textStyle="bold|normal"

                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/averageValue"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:textAlignment="center"
                                android:text = "1"
                                android:textSize="30sp" />


                        </LinearLayout>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="16dp"
                    android:contentDescription="@string/fab_map"
                    android:src="@drawable/ic_baseline_map_24"
                    app:backgroundTint="@color/green"
                    app:fabSize="mini" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_compass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end|bottom"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="66dp"
                    android:contentDescription="@string/compass"
                    android:src="@drawable/blackcompass"
                    app:backgroundTint="@color/green"
                    app:fabSize="mini"

                    app:rippleColor="#EDE8E8" />


                <!--            <ImageView-->
                <!--                android:id="@+id/compass"-->
                <!--                android:layout_width="100dp"-->
                <!--                android:layout_height="127dp"-->
                <!--                android:layout_marginTop="85dp"-->
                <!--                android:contentDescription="@string/directionarrow"-->
                <!--                android:src="@drawable/slimarrow" />-->

                <!--            <ImageView-->
                <!--                android:id="@+id/headTo"-->
                <!--                android:layout_width="393dp"-->
                <!--                android:layout_height="127dp"-->
                <!--                android:layout_marginStart="0dp"-->
                <!--                android:layout_marginTop="85dp"-->
                <!--                android:layout_marginEnd="0dp"-->
                <!--                android:contentDescription="@string/directionarrow"-->
                <!--                android:src="@drawable/slimarrow" />-->


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/appToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:background="@color/green"

                    android:elevation="4dp"
                    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

                    >


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/spinner"
                        app:layout_constraintStart_toStartOf="@+id/spinner">

                        <!--                    <com.google.android.material.textfield.TextInputLayout-->
                        <!--                        android:layout_width="match_parent"-->
                        <!--                        android:layout_height="match_parent"-->
                        <!--                        android:layout_marginEnd ="5dp"-->

                        <!--                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">-->

                        <!--                        <AutoCompleteTextView-->
                        <!--                            android:id="@+id/display_project_name"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_marginStart="5dp"-->
                        <!--                            android:layout_weight="1"-->
                        <!--                            android:inputType="none"-->
                        <!--                            android:text=""-->
                        <!--                            android:textAllCaps="true"-->
                        <!--                            android:textSize="10sp"-->
                        <!--                            app:layout_constraintStart_toStartOf="parent"-->
                        <!--                            app:layout_constraintTop_toTopOf="parent" />-->

                        <!--                    </com.google.android.material.textfield.TextInputLayout>-->

                        <TextView
                            android:id="@+id/display_project_name"
                            android:layout_width="110dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="11dp"
                            android:text=" "
                            android:textAllCaps="true"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/guideline2" />

                        <Button
                            android:id="@+id/buttonConnect"
                            android:layout_width="0dp"
                            android:layout_height="51dp"

                            android:layout_marginStart="66dp"
                            android:layout_marginEnd="187dp"
                            android:layout_marginBottom="4dp"
                            android:backgroundTint="@color/green"
                            android:text="PAIR"
                            android:textColor="@color/black"
                            android:visibility="invisible"
                            app:layout_constraintBottom_toBottomOf="parent"

                            app:layout_constraintStart_toStartOf="parent" />

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="158dp"
                            android:layout_height="26dp"
                            android:layout_marginEnd="46dp"
                            android:layout_weight="1"
                            android:visibility="invisible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/buttonConnect"
                            app:layout_constraintTop_toTopOf="@+id/buttonConnect" />


                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toTopOf="@+id/display_project_name"
                            app:layout_constraintGuide_percent="0.06393862"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.appcompat.widget.Toolbar>


            </FrameLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="320dp"
            android:visibility="gone" />

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navheader"
        app:menu="@menu/navmenu" />
</androidx.drawerlayout.widget.DrawerLayout>