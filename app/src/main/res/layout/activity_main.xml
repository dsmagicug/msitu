<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"

            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <fragment
                    android:id="@+id/mapFragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="407dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="70dp"
                    android:visibility="invisible"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="20dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_first">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/myTextView"
                                android:layout_width="203dp"
                                android:layout_height="140dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="0dp"
                                android:fontFamily="@font/sans"
                                android:padding="10dp"

                                android:text="Marked Pts:"
                                android:textAlignment="center"
                                android:textSize="35sp"
                                android:textStyle="bold|normal"

                                />

                            <TextView
                                android:id="@+id/numberOfPoints"

                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:autofillHints=""
                                android:padding="5dp"
                                android:text=" "
                                android:textAlignment="center"
                                android:textSize="90sp"
                                android:textStyle="bold|normal" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/hr" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/myTextView2"
                                android:layout_width="203dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="0dp"
                                android:fontFamily="@font/sans"
                                android:padding="5dp"
                                android:text="Next Point in:"
                                android:textAlignment="textStart"
                                android:textSize="25sp"
                                android:textStyle="bold|normal"

                                />

                            <TextView
                                android:id="@+id/distance"
                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:autofillHints=""
                                android:fontFamily="@font/sans"
                                android:padding="5dp"
                                android:text=""
                                android:textAlignment="center"
                                android:textSize="30sp"
                                android:textStyle="bold|normal" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/hr" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/linesMarked"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:fontFamily="@font/sans"
                                android:padding="5dp"
                                android:text="Lines Marked:"
                                android:textSize="20sp"
                                android:textAlignment="textStart"
                                android:textStyle="bold|normal" />

                            <TextView
                                android:id="@+id/linesMarkedValue"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:text="0"
                                android:textAlignment="center"
                                android:textSize="30sp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/hr" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/pace"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/sans"
                                android:padding="5dp"
                                android:text="Pace (Points per Minute):"
                                android:textAlignment="textStart"
                                android:textSize="25sp"

                                android:textStyle="bold|normal" />

                            <TextView
                                android:id="@+id/paceValue"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:text=""
                                android:textAlignment="center"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/hr" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/totalPoints"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"

                                android:fontFamily="@font/sans"
                                android:padding="5dp"
                                android:layout_marginStart="5dp"
                                android:text="Points on Line:"
                                android:textAlignment="textStart"
                                android:textSize="20sp"

                                android:textStyle="bold|normal" />

                            <TextView
                                android:id="@+id/totalPointsValue"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:text=""
                                android:textAlignment="center"
                                android:textSize="30sp" />


                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/btsearching"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_margin="25dp"
                    android:background="@color/white"
                    android:padding="15dp"
                    android:src="@drawable/btsearching"
                    android:text="@string/scanning_for_devices"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:visibility="invisible" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_reset"
                    style="?attr/floatingActionButtonLargeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end|bottom"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="160dp"
                    android:contentDescription="UnDo"
                    android:src="@drawable/ic_baseline_undo_24"
                    app:backgroundTint="@color/green" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_map"
                    style="?attr/floatingActionButtonLargeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="16dp"
                    android:contentDescription="@string/fab_map"
                    android:src="@drawable/ic_baseline_map_24"
                    app:backgroundTint="@color/green" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_compass"
                    style="?attr/floatingActionButtonLargeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end|bottom"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="86dp"
                    android:contentDescription="@string/compass"
                    android:src="@drawable/blackcompass"
                    app:backgroundTint="@color/green"

                    app:rippleColor="#EDE8E8" />


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/appToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@color/green"

                    android:elevation="4dp"
                    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

                    >


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/spinner"
                        app:layout_constraintStart_toStartOf="@+id/spinner">

                        <TextView
                            android:id="@+id/display_project_name"
                            android:layout_width="wrap_content"
                            android:layout_height="61dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginBottom="15dp"

                            android:gravity="center"
                            android:text=""
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            android:textStyle="normal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/guideline2" />

                        <Button
                            android:id="@+id/buttonConnect"
                            android:layout_width="0dp"
                            android:layout_height="51dp"
                            android:layout_marginStart="120dp"
                            android:layout_marginEnd="187dp"
                            android:layout_marginBottom="15dp"
                            android:backgroundTint="@color/green"
                            android:gravity="center"
                            android:text="PAIR"

                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"

                            app:layout_constraintStart_toStartOf="parent" />

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="228dp"
                            android:layout_height="26dp"
                            android:layout_marginEnd="46dp"
                            android:layout_marginBottom="15dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/buttonConnect"
                            app:layout_constraintTop_toTopOf="@+id/buttonConnect" />


                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toTopOf="@+id/display_project_name"
                            app:layout_constraintGuide_percent="0.06393862"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.appcompat.widget.Toolbar>

                    <LinearLayout
                        android:id="@+id/directionsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <LinearLayout
                            android:id="@+id/leftLayout"
                            android:layout_width="407dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="95dp"
                            android:layout_marginStart="5dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="@+id/appToolbar"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/leftDirectionValue"

                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:autofillHints=""
                                android:padding="5dp"
                                android:src="@drawable/leftarrow"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/directionLeft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"

                                android:fontFamily="@font/sans"

                                android:padding="5dp"
                                android:text="Turn Right"
                                android:textAlignment="center"
                                android:textSize="35sp"
                                android:textStyle="normal|bold"


                                />


                        </LinearLayout>

                        <View
                            android:layout_width="407dp"
                            android:layout_height="2dp"
                            android:background="@color/hr" />

                        <LinearLayout
                            android:id="@+id/rightLayout"
                            android:layout_width="407dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="5dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/rightDirectionValue"

                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:autofillHints=""
                                android:padding="5dp"
                                android:src="@drawable/rightarrow"
                                android:textAlignment="center"
                                android:textStyle="bold|normal"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/directionRight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/sans"

                                android:padding="5dp"
                                android:text="Turn Left"
                                android:textAlignment="center"
                                android:textSize="35sp"
                                android:textStyle="normal|bold"


                                />

                        </LinearLayout>

                        <View
                            android:layout_width="407dp"
                            android:layout_height="2dp"
                            android:background="@color/hr" />

                        <LinearLayout
                            android:id="@+id/aheadLayout"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/aheadDirectionValue"

                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:autofillHints=""
                                android:padding="5dp"
                                android:src="@drawable/aheadarrow"
                                android:textAlignment="center"
                                android:textStyle="bold|normal"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/aheadDirection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"

                                android:fontFamily="@font/sans"
                                android:padding="5dp"
                                android:text="Ahead"
                                android:textAlignment="center"
                                android:textSize="35sp"
                                android:textStyle="normal|bold"
                                android:visibility="gone"


                                />

                        </LinearLayout>
                    </LinearLayout>

            </FrameLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="320dp"
            android:visibility="gone" />


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navheader"
        app:menu="@menu/navmenu" />
</androidx.drawerlayout.widget.DrawerLayout>