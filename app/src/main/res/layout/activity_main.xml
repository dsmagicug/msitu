<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <fragment
                android:id="@+id/mapFragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="16dp"
                android:contentDescription="@string/fab_map"
                android:src="@drawable/ic_baseline_map_24"
                app:backgroundTint="@color/green"
                app:fabSize="mini" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_compass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end|bottom"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="66dp"
                android:contentDescription="@string/compass"
                android:src="@drawable/blackcompass"
                app:backgroundTint="@color/green"
                app:fabSize="mini"

                app:rippleColor="#EDE8E8" />


<!--            <ImageView-->
<!--                android:id="@+id/compass"-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="127dp"-->
<!--                android:layout_marginTop="85dp"-->
<!--                android:contentDescription="@string/directionarrow"-->
<!--                android:src="@drawable/slimarrow" />-->

<!--            <ImageView-->
<!--                android:id="@+id/headTo"-->
<!--                android:layout_width="393dp"-->
<!--                android:layout_height="127dp"-->
<!--                android:layout_marginStart="0dp"-->
<!--                android:layout_marginTop="85dp"-->
<!--                android:layout_marginEnd="0dp"-->
<!--                android:contentDescription="@string/directionarrow"-->
<!--                android:src="@drawable/slimarrow" />-->

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/appToolbar"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:background="@color/green"

                android:elevation="4dp"
                android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

                >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/spinner"
                    app:layout_constraintStart_toStartOf="@+id/spinner">

                    <TextView
                        android:id="@+id/display_project_name"
                        android:layout_width="110dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="8dp"
                        android:text=" "
                        android:textAllCaps="true"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/buttonConnect"
                        android:layout_width="89dp"
                        android:layout_height="51dp"

                        android:layout_marginStart="53dp"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="4dp"
                        android:backgroundTint="@color/green"
                        android:text="PAIR"
                        android:textColor="@color/black"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/spinner"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="158dp"
                        android:layout_height="26dp"
                        android:layout_marginEnd="46dp"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/buttonConnect"
                        app:layout_constraintTop_toTopOf="@+id/buttonConnect" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.06393862" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--                <Spinner-->
                <!--                    android:id="@+id/spinner"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
